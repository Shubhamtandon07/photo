%pip install -U openai httpx certifi

import httpx

try:
    r = httpx.get("https://api.openai.com/v1/models", timeout=10)
    print("Reachable ✅ | status =", r.status_code)
    print("Tip: 401 is expected without auth.")
except Exception as e:
    print("Not reachable ❌ |", repr(e))

setx OPENAI_API_KEY "sk-..."

import os
os.environ["OPENAI_API_KEY"] = "sk-PASTE_YOUR_KEY"



import os
from openai import OpenAI

client = OpenAI(api_key=os.getenv("OPENAI_API_KEY"))

try:
    resp = client.chat.completions.create(
        model="gpt-4o-mini",
        messages=[{"role": "user", "content": "Say only: ok"}],
        temperature=0,
    )
    print("API OK ✅ | reply:", resp.choices[0].message.content)
except Exception as e:
    print("API FAIL ❌ |", repr(e))
